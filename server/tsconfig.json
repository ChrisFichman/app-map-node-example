{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2021",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist"
  }
}